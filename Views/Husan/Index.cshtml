@model List<PostEntity>

    <table class="table table-bordered table-striped bg-white"style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Content</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
            <tr>
                <td>
                    @item.ID
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Content
                </td>
                <td>
                <img  src="data:image/jpeg;base64,@(Convert.ToBase64String(item.BannerImage))">
                </td>
            </tr> 
            
            }   
        </tbody>
    </table>
